<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginRight="36px"
        android:layout_marginLeft="36px"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_person"
            android:layout_width="500px"
            android:layout_height="500px"
            android:layout_marginTop="30dp"
            android:src="@drawable/ic_person_black_24dp"/>

        <TextView
            android:id="@+id/name"
            android:text="aguarde"
            android:textSize="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:textColor="@color/colorBlank"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/country"
            android:text="aguarde"
            android:textSize="16dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:textColor="@color/colorBlank"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/pos"
            android:text="aguarde"
            android:textSize="16dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:textColor="@color/colorBlank"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="250px"
            android:layout_height="250px"
            android:gravity="center"
            android:background="@drawable/border">

            <TextView
                android:id="@+id/percentual"
                android:text="aguarde"
                android:layout_width="wrap_content"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:layout_gravity="left"
                android:id="@+id/copas_vencidas"
                android:text="Copas do Mundo Vencidas"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="3dp"
                android:textColor="@color/colorBlank"
                android:layout_height="wrap_content"/>

            <com.daimajia.numberprogressbar.NumberProgressBar
                android:id="@+id/number_progress_bar2"
                android:layout_width="wrap_content"
                app:progress_reached_bar_height="10.5dp"
                app:progress_unreached_bar_height="10.3dp"
                android:layout_below="@id/copas_vencidas"
                style="@style/NumberProgressBar_Warning_Red"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/copas_vencidas_pos"
                android:text="2"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="3dp"
                android:textColor="@color/colorBlank"
                android:layout_height="wrap_content"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/copas_disputadas"
                android:text="Copas do Mundo Disputadas"
                android:layout_gravity="left"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="3dp"
                android:layout_width="wrap_content"
                android:textColor="@color/colorBlank"
                android:layout_height="wrap_content"/>

            <com.daimajia.numberprogressbar.NumberProgressBar
                android:id="@+id/number_progress_bar1"
                android:layout_width="wrap_content"
                app:progress_reached_bar_height="10.5dp"
                app:progress_unreached_bar_height="10.3dp"
                android:layout_below="@id/copas_disputadas"
                style="@style/NumberProgressBar_Warning_Red"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/copas_disputadas_pos"
                android:text="2"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="3dp"
                android:textColor="@color/colorBlank"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>